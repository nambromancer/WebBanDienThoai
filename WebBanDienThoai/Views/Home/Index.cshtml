@using WebBanDienThoai.Controllers
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = ViewBag.Categories as List<WebBanDienThoai.Models.Category>;
    var productsByCategory = ViewBag.ProductsByCategory as Dictionary<int, List<WebBanDienThoai.Models.Product>>;
    var suggestedProducts = ViewBag.SuggestedProducts as List<WebBanDienThoai.Models.Product>;
    var searchTerms = ViewBag.SearchTerms as List<SearchTermViewModel>;
}

<link href="~/Content/category.css" rel="stylesheet" />

<style>
    .home-section {
        background: #f5f7fb;
        border-radius: 12px;
        padding: 16px;
        margin: 16px auto 32px;
        max-width: 1200px;
    }

    .home-section-title {
        font-size: 20px;
        font-weight: 800;
        margin: 0 0 12px 0;
        color: #333;
    }

    .home-tabs {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 12px;
    }

    .home-tab {
        background: #fff;
        border: 1px solid #e6e6e6;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 600;
        color: #333;
        padding: 8px 14px;
        font-size: 14px;
        user-select: none;
    }

        .home-tab.active {
            border-color: #FFD400;
            box-shadow: 0 0 0 2px rgba(255,212,0,.15);
        }

    .home-banner {
        background: #ffeaa6;
        border: 1px dashed #FFD400;
        color: #333;
        font-weight: 800;
        text-align: center;
        padding: 10px 8px;
        border-radius: 10px;
        margin-bottom: 12px;
    }

    .home-grid-container {
        position: relative;
        min-height: 300px;
    }

        .home-grid-container .product-grid {
            display: none !important;
        }

            .home-grid-container .product-grid.active {
                display: grid !important;
            }

    .home-see-more {
        text-align: center;
        margin-top: 14px;
    }

    .home-see-more-link {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: #1976d2;
        font-weight: 800;
        text-decoration: none;
        background: transparent;
        border: 0;
        padding: 8px 16px;
        font-size: 14px;
        cursor: pointer;
    }

        .home-see-more-link:hover {
            text-decoration: underline;
        }

    .search-cloud {
        display: flex;
        flex-wrap: wrap;
        gap: 10px 12px;
        padding: 8px 0 4px;
    }

    .search-chip {
        display: inline-flex;
        align-items: center;
        height: 28px;
        padding: 0 12px;
        border-radius: 999px;
        background: #f6f8fb;
        border: 1px solid #e6ebf2;
        color: #2b2f36 !important;
        text-decoration: none !important;
        font-size: 13px;
        font-weight: 600;
        line-height: 1;
        transition: all .15s ease;
    }

        .search-chip:hover {
            background: #eef3fb;
            border-color: #d7dfec;
            color: #111 !important;
        }
</style>

<section class="home-section">
    <h2 class="home-section-title">Khuyến mãi online</h2>

    <div class="home-tabs">
        @if (categories != null && categories.Any())
        {
            for (int i = 0; i < categories.Count; i++)
            {
                var category = categories[i];
                var tabKey = "category-" + category.CategoryID;
                var productCount = productsByCategory != null && productsByCategory.ContainsKey(category.CategoryID)
                    ? productsByCategory[category.CategoryID].Count
                    : 0;

                <button class="home-tab @(i == 0 ? "active" : "")"
                        data-tab="@tabKey"
                        data-category-id="@category.CategoryID"
                        data-category-name="@category.CategoryName"
                        title="@productCount sản phẩm">
                    @category.CategoryName
                </button>
            }
        }
    </div>

    <div class="home-banner">
        ĐIỆN THOẠI GIÁ SỐC - DỊCH VỤ ĐẲNG CẤP
    </div>

    <div class="home-grid-container">
        @if (categories != null && productsByCategory != null)
        {
            for (int i = 0; i < categories.Count; i++)
            {
                var category = categories[i];
                var tabKey = "category-" + category.CategoryID;
                var products = productsByCategory.ContainsKey(category.CategoryID)
                    ? productsByCategory[category.CategoryID]
                    : new List<WebBanDienThoai.Models.Product>();

                <div class="product-grid @(i == 0 ? "active" : "")"
                     data-tab-panel="@tabKey"
                     data-category-id="@category.CategoryID">
                    @if (products != null && products.Any())
                    {
                        foreach (var product in products)
                        {
                            var firstImage = product.ProductImages != null && product.ProductImages.Any()
                                ? Url.Content(product.ProductImages.OrderBy(img => img.DisplayOrder ?? int.MaxValue).First().ImageURL)
                                : !string.IsNullOrWhiteSpace(product.ProductImage)
                                    ? Url.Content(product.ProductImage)
                                    : Url.Content("~/Content/Images/no-image.png");

                            var discount = product.OriginalPrice.HasValue && product.OriginalPrice > product.ProductPrice
                                ? Math.Round((1 - (product.ProductPrice / product.OriginalPrice.Value)) * 100)
                                : 0;

                            <article class="product-card" data-product-id="@product.ProductID" data-category-id="@product.CategoryID">
                                @if (discount > 0)
                                {
                                    <div class="card-topline">
                                        <span class="pill mint">Trả góp 0%</span>
                                        <span class="pill flash-sale">Flash Sale</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="card-topline">
                                        <span class="pill mint">Trả góp 0%</span>
                                    </div>
                                }

                                <a href="@Url.Action("ProductDetail", "Products", new { id = product.ProductID })" class="product-thumb" aria-label="@product.ProductName">
                                    <img class="thumb-img"
                                         src="@firstImage"
                                         alt="@product.ProductName"
                                         loading="lazy"
                                         decoding="async" />
                                </a>

                                <h3 class="product-name">
                                    <a href="@Url.Action("ProductDetail", "Products", new { id = product.ProductID })">
                                        @product.ProductName
                                    </a>
                                </h3>

                                <div class="price-line">
                                    <span class="price">@String.Format("{0:N0}₫", product.ProductPrice)</span>
                                    @if (product.OriginalPrice.HasValue && product.OriginalPrice > product.ProductPrice)
                                    {
                                        <span class="price-old">@String.Format("{0:N0}₫", product.OriginalPrice.Value)</span>
                                        <span class="discount">-@discount%</span>
                                    }
                                </div>
                            </article>
                        }
                    }
                    else
                    {
                        <div style="grid-column: 1/-1; text-align: center; padding: 40px 20px; color: #666; background: #fff; border-radius: 8px;">
                            <p style="font-size: 16px; margin: 0;">Không có sản phẩm nào trong danh mục <strong>@category.CategoryName</strong></p>
                        </div>
                    }
                </div>
            }
        }
    </div>

    <div class="home-see-more">
        <a id="seeMoreLink" href="#" class="home-see-more-link">
            Xem thêm <span id="seeMoreText">sản phẩm</span> ›
        </a>
    </div>
</section>

<section class="home-section">
    <h2 class="home-section-title">Gợi ý cho bạn</h2>

    <div id="suggestGrid" class="product-grid active">
        @if (suggestedProducts != null && suggestedProducts.Any())
        {
            foreach (var product in suggestedProducts)
            {
                var firstImage = product.ProductImages != null && product.ProductImages.Any()
                    ? Url.Content(product.ProductImages.OrderBy(img => img.DisplayOrder ?? int.MaxValue).First().ImageURL)
                    : !string.IsNullOrWhiteSpace(product.ProductImage)
                        ? Url.Content(product.ProductImage)
                        : Url.Content("~/Content/Images/no-image.png");

                var discount = product.OriginalPrice.HasValue && product.OriginalPrice > product.ProductPrice
                    ? Math.Round((1 - (product.ProductPrice / product.OriginalPrice.Value)) * 100)
                    : 0;

                <article class="product-card">
                    @if (discount > 0)
                    {
                        <div class="card-topline">
                            <span class="pill mint">Trả góp 0%</span>
                            <span class="pill flash-sale">Flash Sale</span>
                        </div>
                    }

                    <a href="@Url.Action("ProductDetail", "Products", new { id = product.ProductID })" class="product-thumb" aria-label="@product.ProductName">
                        <img class="thumb-img"
                             src="@firstImage"
                             alt="@product.ProductName"
                             loading="lazy"
                             decoding="async" />
                    </a>

                    <h3 class="product-name">
                        <a href="@Url.Action("ProductDetail", "Products", new { id = product.ProductID })">
                            @product.ProductName
                        </a>
                    </h3>

                    <div class="price-line">
                        <span class="price">@String.Format("{0:N0}₫", product.ProductPrice)</span>
                        @if (product.OriginalPrice.HasValue && product.OriginalPrice > product.ProductPrice)
                        {
                            <span class="price-old">@String.Format("{0:N0}₫", product.OriginalPrice.Value)</span>
                            <span class="discount">-@discount%</span>
                        }
                    </div>
                </article>
            }
        }
    </div>

    @if (suggestedProducts != null && suggestedProducts.Count > 15)
    {
        <div class="home-see-more">
            <button type="button" id="loadMoreSuggest" class="home-see-more-link">
                Xem thêm <span id="suggestCount">0</span> sản phẩm ›
            </button>
        </div>
    }
</section>

<!-- Mọi người cũng tìm kiếm - CHUYỂN SANG TÌM KIẾM -->
<section class="home-section">
    <h2 class="home-section-title">Mọi người cũng tìm kiếm</h2>
    <div class="search-cloud">
        @if (searchTerms != null && searchTerms.Any())
        {
            foreach (var term in searchTerms)
            {
                <a href="@Url.Action("Index", "Search", new { q = term.ProductName })"
                   class="search-chip"
                   aria-label="Tìm kiếm @term.ProductName">
                    @term.ProductName
                </a>
            }
        }
        else
        {
            <p style="color: #666;">Chưa có sản phẩm nào</p>
        }
    </div>
</section>

@section scripts {
    <script>
        (function () {
            'use strict';

            console.log('=== Home Page Initialized ===');

            var tabs = document.querySelectorAll('.home-tab');
            var seeMoreLink = document.getElementById('seeMoreLink');
            var seeMoreText = document.getElementById('seeMoreText');
            var container = document.querySelector('.home-grid-container');

            var panels = document.querySelectorAll('[data-tab-panel]');
            console.log('Total panels:', panels.length);
            panels.forEach(function(panel) {
                var tabKey = panel.getAttribute('data-tab-panel');
                var catId = panel.getAttribute('data-category-id');
                var productCount = panel.querySelectorAll('.product-card').length;
                console.log('Panel:', tabKey, 'CategoryID:', catId, 'Products:', productCount);
            });

            tabs.forEach(function(tab) {
                tab.addEventListener('click', function() {
                    var categoryId = this.getAttribute('data-category-id');
                    var categoryName = this.getAttribute('data-category-name');
                    var tabKey = this.getAttribute('data-tab');

                    console.log('=== Tab Clicked ===');
                    console.log('CategoryID:', categoryId);
                    console.log('CategoryName:', categoryName);
                    console.log('TabKey:', tabKey);

                    tabs.forEach(function(t) { t.classList.remove('active'); });

                    this.classList.add('active');

                    panels.forEach(function(panel) {
                        panel.classList.remove('active');
                    });

                    var targetPanel = container.querySelector('[data-tab-panel="' + tabKey + '"]');
                    if (targetPanel) {
                        targetPanel.classList.add('active');
                        var productCount = targetPanel.querySelectorAll('.product-card').length;
                        console.log('Showing panel:', tabKey, 'with', productCount, 'products');
                    } else {
                        console.error('Target panel not found:', tabKey);
                    }

                    if (seeMoreText) seeMoreText.textContent = categoryName;
                    if (seeMoreLink && categoryId) {
                        seeMoreLink.href = '@Url.Action("Index", "Products")?categoryId=' + categoryId;
                    }
                });
            });

            if (tabs.length > 0) {
                var firstTab = tabs[0];
                var categoryName = firstTab.getAttribute('data-category-name');
                var categoryId = firstTab.getAttribute('data-category-id');
                if (seeMoreText) seeMoreText.textContent = categoryName;
                if (seeMoreLink && categoryId) {
                    seeMoreLink.href = '@Url.Action("Index", "Products")?categoryId=' + categoryId;
                }
            }

            var suggestGrid = document.getElementById('suggestGrid');
            var loadMoreBtn = document.getElementById('loadMoreSuggest');
            var countSpan = document.getElementById('suggestCount');
            var pageSize = 15;

            if (suggestGrid && loadMoreBtn) {
                var cards = Array.from(suggestGrid.querySelectorAll('.product-card'));

                cards.forEach(function(card, index) {
                    if (index >= pageSize) {
                        card.classList.add('is-hidden-loadmore');
                    }
                });

                function updateCount() {
                    var hidden = suggestGrid.querySelectorAll('.product-card.is-hidden-loadmore').length;
                    if (countSpan) countSpan.textContent = hidden;
                    if (hidden <= 0 && loadMoreBtn) {
                        loadMoreBtn.style.display = 'none';
                    }
                }

                updateCount();

                loadMoreBtn.addEventListener('click', function() {
                    var hiddenCards = Array.from(suggestGrid.querySelectorAll('.product-card.is-hidden-loadmore'));
                    var toShow = hiddenCards.slice(0, pageSize);

                    toShow.forEach(function(card) {
                        card.classList.remove('is-hidden-loadmore');
                    });

                    updateCount();
                });
            }
        })();
    </script>
}