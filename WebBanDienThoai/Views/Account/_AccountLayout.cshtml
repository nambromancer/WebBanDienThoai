@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .account-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 0 15px;
    }

    .account-layout {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 25px;
    }

    /* Sidebar Menu - Đồng bộ với dropdown header */
    .account-sidebar {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        height: fit-content;
        position: sticky;
        top: 20px;
    }

    .sidebar-title {
        font-size: 18px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #ecf0f1;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .sidebar-menu li {
            margin-bottom: 8px;
        }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 15px;
            color: #555;
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s;
            font-weight: 500;
            font-size: 14px;
        }

            .sidebar-menu a:hover {
                background: #f8f9fa;
                color: #e74c3c;
                text-decoration: none;
            }

            .sidebar-menu a.active {
                background: #e74c3c;
                color: white;
            }

        .sidebar-menu i {
            font-size: 18px;
            width: 20px;
        }

        /* Emoji icon style giống dropdown header */
        .sidebar-menu .menu-icon {
            font-size: 18px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 24px;
            height: 24px;
            flex-shrink: 0;
        }

    /* Content Area */
    .account-content {
        background: white;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        min-height: 500px;
    }

    .content-title {
        font-size: 24px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #ecf0f1;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .account-layout {
            grid-template-columns: 1fr;
        }

        .account-sidebar {
            position: static;
        }
    }
</style>

<div class="account-container">
    <div class="account-layout">
        <!-- Sidebar Menu - Đồng bộ với dropdown header -->
        <aside class="account-sidebar">
            <h3 class="sidebar-title">Tài khoản của tôi</h3>
            <ul class="sidebar-menu">
                <li>
                    <a href="@Url.Action("UserProfile", "Account")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "UserProfile" ? "active" : "")">
                        <span class="menu-icon">ℹ️</span>
                        <span>Thông tin cá nhân</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("PurchaseHistory", "Account")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "PurchaseHistory" ? "active" : "")">
                        <span class="menu-icon">📦</span>
                        <span>Lịch sử mua hàng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout", "Account")" style="color: #d32f2f;">
                        <span class="menu-icon">🚪</span>
                        <span>Đăng xuất</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="account-content">
            @RenderBody()
        </main>
    </div>
</div>

@RenderSection("scripts", required: false)