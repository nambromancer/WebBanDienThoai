@model WebBanDienThoai.Models.User

@{
    ViewBag.Title = "Xóa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-danger" style="padding: 15px; color: white; border-radius: 5px;">
    <i class="fas fa-trash-alt"></i> XÓA TÀI KHOẢN
</h2>

<div class="alert alert-danger">
    <h4><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h4>
    <p>Bạn có chắc chắn muốn xóa tài khoản này không? Hành động này không thể hoàn tác.</p>
</div>

<div class="card mb-4">
    <div class="card-header bg-light">
        <h4 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin tài khoản</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Số điện thoại:</div>
            <div class="col-md-9">
                <h5 class="text-primary mb-0">
                    <i class="fas fa-phone"></i> @Model.PhoneNumber
                </h5>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Vai trò:</div>
            <div class="col-md-9">
                @if (Model.UserRole == "0")
                {
                    <span class="badge badge-danger" style="font-size: 16px; padding: 8px 15px;">
                        <i class="fas fa-user-shield"></i> Admin
                    </span>
                }
                else if (Model.UserRole == "1")
                {
                    <span class="badge badge-info" style="font-size: 16px; padding: 8px 15px;">
                        <i class="fas fa-user"></i> Khách hàng
                    </span>
                }
                else
                {
                    <span class="badge badge-secondary" style="font-size: 16px; padding: 8px 15px;">
                        @Model.UserRole
                    </span>
                }
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Ngày tạo:</div>
            <div class="col-md-9">
                @if (Model.CreatedDate.HasValue)
                {
                    <i class="fas fa-calendar-alt text-success"></i>
                    @Model.CreatedDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                }
                else
                {
                    <span class="text-muted">Chưa cập nhật</span>
                }
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Số khách hàng liên kết:</div>
            <div class="col-md-9">
                @{
                    var customerCount = Model.Customers != null ? Model.Customers.Count() : 0;
                    if (customerCount > 0)
                    {
                        <span class="badge badge-warning" style="font-size: 14px;">@customerCount khách hàng</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary" style="font-size: 14px;">0 khách hàng</span>
                    }
                }
            </div>
        </div>
    </div>
</div>

@if (Model.Customers != null && Model.Customers.Any())
{
    <div class="alert alert-warning">
        <h5><i class="fas fa-exclamation-circle"></i> Không thể xóa!</h5>
        <p class="mb-0">
            Tài khoản này có <strong>@Model.Customers.Count khách hàng</strong> liên kết trong hệ thống.
            Vui lòng xóa hoặc chuyển các khách hàng sang tài khoản khác trước khi xóa tài khoản này.
        </p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-users"></i> Danh sách khách hàng liên kết</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>@customer.CustomerID</td>
                                <td>@customer.CustomerName</td>
                                <td>@customer.CustomerEmail</td>
                                <td>@customer.PhoneNumber</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="form-group mt-4">
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        @Html.ActionLink("Xem chi tiết", "Details", new { id = Model.PhoneNumber }, new { @class = "btn btn-info" })
    </div>
}
else
{
    using (Html.BeginForm("Delete", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PhoneNumber)

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản này không?')">
                <i class="fas fa-trash"></i> Xác nhận xóa
            </button>
            @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
}