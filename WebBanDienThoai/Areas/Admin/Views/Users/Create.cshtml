@model WebBanDienThoai.Models.User

@{
    ViewBag.Title = "Thêm tài khoản mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success" style="padding: 15px; color: white; border-radius: 5px;">
    <i class="fas fa-user-plus"></i> THÊM TÀI KHOẢN MỚI
</h2>

@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card">
            <div class="card-header bg-light">
                <h4 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin tài khoản</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, "Số điện thoại:", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Nhập số điện thoại", maxlength = "11" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        <small class="form-text text-muted">Số điện thoại sẽ được dùng làm tên đăng nhập</small>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Mật khẩu:", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.UserRole, "Vai trò:", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(m => m.UserRole, ViewBag.RoleList as SelectList, "-- Chọn vai trò --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserRole, "", new { @class = "text-danger" })
                        <small class="form-text text-muted">
                            <strong>Admin (0)</strong>: Quản trị hệ thống |
                            <strong>Khách hàng (1)</strong>: Người dùng thông thường
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Lưu
                </button>
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>$(document).ready(function () {
            // Validation rules
            $('form').validate({
                rules: {
                    PhoneNumber: {
                        required: true,
                        digits: true,
                        minlength: 10,
                        maxlength: 11
                    },
                    Password: {
                        required: true,
                        minlength: 6
                    },
                    UserRole: {
                        required: true
                    }
                },
                messages: {
                    PhoneNumber: {
                        required: "Vui lòng nhập số điện thoại",
                        digits: "Số điện thoại chỉ chứa số",
                        minlength: "Số điện thoại phải có ít nhất 10 số",
                        maxlength: "Số điện thoại không quá 11 số"
                    },
                    Password: {
                        required: "Vui lòng nhập mật khẩu",
                        minlength: "Mật khẩu phải có ít nhất 6 ký tự"
                    },
                    UserRole: {
                        required: "Vui lòng chọn vai trò"
                    }
                }
            });
        });</script>
}