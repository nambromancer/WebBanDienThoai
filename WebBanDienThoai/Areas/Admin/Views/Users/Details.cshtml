@model WebBanDienThoai.Models.User

@{
    ViewBag.Title = "Chi tiết tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-info text-white" style="padding: 15px; border-radius: 5px;">
    <i class="fas fa-user-circle"></i> CHI TIẾT TÀI KHOẢN
</h2>

<div class="container-fluid">
    @* Thông tin tài khoản *@
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h4 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin tài khoản</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Số điện thoại:</div>
                <div class="col-md-9">
                    <h5 class="text-primary mb-0">
                        <i class="fas fa-phone"></i> @Model.PhoneNumber
                    </h5>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Vai trò:</div>
                <div class="col-md-9">
                    @if (Model.UserRole == "0")
                    {
                        <span class="badge badge-danger" style="font-size: 16px; padding: 8px 15px;">
                            <i class="fas fa-user-shield"></i> Admin
                        </span>
                        <p class="text-muted mt-2 mb-0">Quản trị viên hệ thống</p>
                    }
                    else if (Model.UserRole == "1")
                    {
                        <span class="badge badge-info" style="font-size: 16px; padding: 8px 15px;">
                            <i class="fas fa-user"></i> Khách hàng
                        </span>
                        <p class="text-muted mt-2 mb-0">Người dùng thông thường</p>
                    }
                    else
                    {
                        <span class="badge badge-secondary" style="font-size: 16px; padding: 8px 15px;">
                            @Model.UserRole
                        </span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Ngày tạo:</div>
                <div class="col-md-9">
                    @if (Model.CreatedDate.HasValue)
                    {
                        <i class="fas fa-calendar-alt text-success"></i>
                        @Model.CreatedDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                    }
                    else
                    {
                        <span class="text-muted">Chưa cập nhật</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Trạng thái:</div>
                <div class="col-md-9">
                    <span class="badge badge-success">
                        <i class="fas fa-check-circle"></i> Đang hoạt động
                    </span>
                </div>
            </div>
        </div>
    </div>

    @* Danh sách khách hàng liên kết *@
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h4 class="mb-0">
                <i class="fas fa-users"></i> Khách hàng liên kết
                @if (Model.Customers != null && Model.Customers.Any())
                {
                    <span class="badge badge-primary float-right">@Model.Customers.Count khách hàng</span>
                }
            </h4>
        </div>
        <div class="card-body">
            @if (Model.Customers != null && Model.Customers.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model.Customers)
                            {
                                <tr>
                                    <td>@customer.CustomerID</td>
                                    <td><strong>@customer.CustomerName</strong></td>
                                    <td>
                                        <i class="fas fa-envelope text-info"></i>
                                        @customer.CustomerEmail
                                    </td>
                                    <td>
                                        <i class="fas fa-phone text-success"></i>
                                        @customer.PhoneNumber
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(customer.CustomerAddress))
                                        {
                                            @customer.CustomerAddress
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cập nhật</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Xem chi tiết", "Details", "Customers", new { area = "Admin", id = customer.CustomerID }, new { @class = "btn btn-sm btn-info" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle"></i>
                    Tài khoản này chưa có khách hàng liên kết.
                </div>
            }
        </div>
    </div>
</div>

<div class="form-group mt-4">
    <div class="col-md-offset-3 col-md-9">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.PhoneNumber }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Xóa", "Delete", new { id = Model.PhoneNumber }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>