<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QUẢN TRỊ WEBSITE</title>
    <link href="~/Content/_AdminLayout.css" rel="stylesheet" />
    <link href="~/Content/responsive-admin.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    <link href="~/Content/header-style.css" rel="stylesheet" />
    <link href="~/Content/footer-style.css" rel="stylesheet" />

    <!-- Font Awesome 6 CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header Admin -->
    <header class="main-header" role="banner">
        <div class="header-container">
            <!-- Logo section -->
            <div class="logo-section">
                <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="logo-link" aria-label="Về trang quản trị">
                    <div class="logo-circle">
                        <span class="logo-icon"><i class="fas fa-cogs"></i></span>
                    </div>
                    <span class="logo-text">thegioididong</span>
                </a>
            </div>

            <!-- User actions - Admin -->
            <div class="user-actions" aria-label="Tác vụ quản trị">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="cart-link" aria-label="Xem trang chủ customer" title="Xem trang khách hàng">
                    <i class="fas fa-home"></i>
                    <span>Trang khách</span>
                </a>
                <a href="javascript:void(0)" class="user-login" onclick="confirmLogout()">
                    <i class="fas fa-user-shield"></i>
                    <span>Admin</span>
                </a>
                <div class="location" aria-label="Phiên bản">
                    <i class="fas fa-shield-alt"></i>
                    <span>v1.0</span>
                </div>
            </div>
        </div>
    </header>

    <!-- Menu Admin Navigation -->
    <nav class="admin-menu" aria-label="Menu quản trị">
        <div class="nav-container">
            <ul>
                <li><a href="@Url.Action("Index", "Home", new { area = "Admin" })"><i class="fas fa-chart-line"></i> Dashboard</a></li>
                <li><a href="@Url.Action("Index", "Categories", new { area = "Admin" })"><i class="fas fa-folder"></i> Danh mục</a></li>
                <li><a href="@Url.Action("Index", "Products", new { area = "Admin" })"><i class="fas fa-box"></i> Sản phẩm</a></li>
                <li><a href="@Url.Action("Index", "SpecificationCategories", new { area = "Admin" })"><i class="fas fa-tags"></i> Loại thông số</a></li>
                <li><a href="@Url.Action("Index", "Orders", new { area = "Admin" })"><i class="fas fa-shopping-cart"></i> Đơn hàng</a></li>
                <li><a href="@Url.Action("Index", "Customers", new { area = "Admin" })"><i class="fas fa-users"></i> Khách hàng</a></li>
                <li><a href="@Url.Action("Index", "Users", new { area = "Admin" })"><i class="fas fa-user-cog"></i> Tài khoản</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Quản trị Website Thế Giới Di Động</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function confirmLogout() {
            if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                window.location.href = '@Url.Action("Logout", "Account", new { area = "" })';
            }
        }

        // Auto dismiss alerts after 5 seconds
        $(document).ready(function () {
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
    </parameter>
    </invoke>
